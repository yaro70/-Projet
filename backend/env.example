# Configuration d'environnement pour le Projet Pâtisserie

# =============================================================================
# CONFIGURATION BACKEND DJANGO
# =============================================================================

# Clé secrète Django (GÉNÉRER UNE NOUVELLE CLÉ EN PRODUCTION)
SECRET_KEY=django-insecure-dev-key-change-in-production

# Mode debug (False en production)
DEBUG=True

# Base de données (SQLite pour développement)
DATABASE_URL=sqlite:///db.sqlite3

# Hôtes autorisés
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# CONFIGURATION CORS
# =============================================================================

# Origines autorisées pour CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Autoriser les credentials
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# CONFIGURATION CHANNELS (WebSocket)
# =============================================================================

# Backend pour les channels (InMemory pour développement)
CHANNEL_LAYERS_BACKEND=channels.layers.InMemoryChannelLayer

# Configuration Redis pour la production (décommentez si nécessaire)
# CHANNEL_LAYERS_BACKEND=channels_redis.core.RedisChannelLayer
# REDIS_URL=redis://localhost:6379/1

# =============================================================================
# CONFIGURATION CACHE
# =============================================================================

# Backend de cache (LocMem pour développement)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# Configuration Redis pour la production (décommentez si nécessaire)
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_LOCATION=redis://localhost:6379/1

# =============================================================================
# CONFIGURATION EMAIL (Optionnel)
# =============================================================================

# Configuration SMTP pour les emails
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# CONFIGURATION WHATSAPP
# =============================================================================

# Numéro de téléphone WhatsApp (avec indicatif pays)
WHATSAPP_PHONE=2250123456789

# =============================================================================
# CONFIGURATION PRODUCTION (Render)
# =============================================================================

# Décommentez ces lignes pour la production sur Render
# DEBUG=False
# ALLOWED_HOSTS=.onrender.com
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True